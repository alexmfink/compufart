namespace Audolon::Utils
{
    float ClipValue(float inValue, float minValue, float maxValue)
    {
        return max(min(inValue, maxValue), minValue);
    }

    int ClipValue(int inValue, int minValue, int maxValue)
    {
        return max(min(inValue, maxValue), minValue);
    }
}